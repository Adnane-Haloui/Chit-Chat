<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_gravity="center"
	android:scrollbars="none"
	tools:context="com.rajora.arun.chat.chit.chitchat.activities.ProfileDetailsActivity">

	<android.support.v7.widget.CardView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="@dimen/pr_det_margin"
		app:elevation="@dimen/pr_det_elevation">

		<LinearLayout
			android:id="@+id/activity_profile_details"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:minWidth="@dimen/pr_det_min_width"
			android:orientation="vertical"
			android:padding="@dimen/pr_det_padding">

			<android.support.v7.widget.CardView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:transitionName="@string/pic_transition_name"
				app:cardCornerRadius="@dimen/pr_det_radius">

				<ImageView
					android:id="@+id/details_image"
					android:layout_width="@dimen/pr_det_image_dimen"
					android:layout_height="@dimen/pr_det_image_dimen"
					android:contentDescription="@string/profile_pic_content_description"
					android:src="@drawable/empty_profile_pic"/>
			</android.support.v7.widget.CardView>

			<TextView
				android:id="@+id/details_text1"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="@dimen/pr_det_tex1t_margin"
				android:gravity="center"
				android:textSize="@dimen/pr_det_text1_size"/>

			<TextView
				android:id="@+id/details_text2"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="@dimen/pr_det_text2_margin"
				android:gravity="center"
				android:textSize="@dimen/pr_det_text2_size"/>

			<TextView
				android:id="@+id/details_text3"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="@dimen/pr_det_ts_margin3"
				android:gravity="center"
				android:textSize="@dimen/pr_det_ts3"/>
		</LinearLayout>
	</android.support.v7.widget.CardView>
</ScrollView>